      character(:), allocatable :: id

      lexr = Lexer(Reader(TextStream(",")))

      token = lexr%get_token() ! skip stream start
      token = lexr%get_token()
      id = token%get_id()
#ifdef __GFORTRAN__
#else
      @assert_that(id, is(equal_to(FLOW_NEXT_ENTRY_INDICATOR)))
