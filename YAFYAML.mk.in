# Include file for external  projects using Unix Make instead of cmake.
# Usage:

# FFLAGS += -I$(GFTL_INCLUDE_DIR) -I$(GFTL_SHARED_INCLUDE_DIR) -I$(YAFYAML_INCLUDE_DIR)
# LFLAGS += $(YAFYAML_SHARED_LIBRARIES)

# gFTL-shared
GFTL_SHARED_TOP_DIR := @GFTL_SHARED_TOP_DIR@
include ${GFTL_SHARED_TOP_DIR}/include/GFTL_SHARED.mk

# yaFyaml
YAFYAML_INSTALL_PREFIX := @CMAKE_INSTALL_PREFIX@
YAFYAML_VERSION := @YAFYAML_VERSION_MAJOR@.@YAFYAML_VERSION_MINOR@
YAFYAML_TOP_DIR := $(YAFYAML_INSTALL_PREFIX)/YAFYAML-$(YAFYAML_VERSION)
YAFYAML_INCLUDE_DIR := $(YAFYAML_TOP_DIR)/include
YAFYAML_LIBRARIES := -L$(YAFYAML_TOP_DIR)/lib -lyaFyaml $(GFTL_SHARED_LIBRARIES)


